<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_menu_list"
    android:background="@color/colorBackground"
    tools:context=".MenuListActivity">


    <RelativeLayout
        android:id="@+id/shapka"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/adress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/colorAccent"
            android:textSize="25sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="@id/adress"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/colorBackground"
            android:layout_below="@id/adress"
            android:textSize="18sp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/b2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/b1"
            android:layout_marginStart="3dp"
            app:layout_constraintTop_toTopOf="@id/adress"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:background="@drawable/rounded_button"
            android:drawableStart="@drawable/assesment_heart"
            android:drawableEnd="@drawable/assesment_heart"
            android:layout_below="@id/adress"
            android:layout_toRightOf="@id/b1"

            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/adress"
            app:layout_constraintTop_toTopOf="@id/adress"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="15dp"
            android:background="@drawable/rounded_textview_background"
            android:layout_alignParentEnd="true"
            android:src="@drawable/basket"
            tools:ignore="ButtonStyle"/>

        <TextView
            android:id="@+id/b3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="@id/b1"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/colorBackground"
            android:layout_below="@id/b1"
            android:textSize="18sp"

            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/b4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/b3"
            android:layout_marginStart="3dp"
            app:layout_constraintTop_toTopOf="@id/b2"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/colorBackground"
            android:layout_below="@id/b1"
            android:layout_toRightOf="@id/b3"
            android:textSize="18sp"

            tools:ignore="MissingConstraints" />

        <RelativeLayout
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/back_bottom"
            android:layout_below="@id/b3"
            app:layout_constraintTop_toTopOf="@id/b3"
            android:layout_marginTop="10dp"

            tools:ignore="MissingConstraints" >

            <Button
                android:id="@+id/popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:background="@drawable/rounded_new_button"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/colorBackground"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:text="Popular"
                tools:ignore="ButtonStyle"
                />

            <Button
                android:id="@+id/coffee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="@id/popular"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:background="@drawable/rounded_button"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/colorBackground"
                android:layout_toRightOf="@id/popular"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:text="Coffee"
                tools:ignore="ButtonStyle"
                />

            <Button
                android:id="@+id/tea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:background="@drawable/rounded_button"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/colorBackground"
                android:layout_toRightOf="@id/coffee"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:text="Tea"
                tools:ignore="ButtonStyle"
                />

            <ImageButton
                android:id="@+id/filters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="15dp"
                android:gravity="right"
                android:layout_toRightOf="@id/tea"
                android:background="@drawable/rounded_button"
                android:layout_alignParentRight="true"
                android:src="@drawable/filters"
                tools:ignore="ButtonStyle"/>



            <TextView
                android:id="@+id/textButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/popular"
                app:layout_constraintTop_toTopOf="@id/popular"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="@id/popular"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/colorBackground"
                android:textSize="25sp"
                />


            <GridView
                android:id="@+id/gridList"
                android:layout_below="@id/textButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"

                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="10dp"

                android:gravity="center"

                android:numColumns="auto_fit"
                android:horizontalSpacing="10dp"
                android:verticalSpacing="10dp"

                >




            </GridView>


        </RelativeLayout>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>