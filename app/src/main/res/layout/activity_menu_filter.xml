<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuFilterActivity">

    <RelativeLayout
        android:id="@+id/windowFilter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_new_background"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/sizeFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_new_background"
            android:fontFamily="@font/roboto_bold"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:text="Size"
            android:textAlignment="center"
            />

        <Button
            android:id="@+id/s1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sizeFilter"
            app:layout_constraintTop_toTopOf="@id/sizeFilter"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="@id/sizeFilter"
            android:layout_marginStart="15dp"
            android:gravity="center"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/colorBackground"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:text="0.2"
            tools:ignore="ButtonStyle"
            />

        <Button
            android:id="@+id/s2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/sizeFilter"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="@id/s1"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/colorBackground"
            android:layout_below="@id/sizeFilter"
            android:layout_toRightOf="@id/s1"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:text="0.4"
            tools:ignore="ButtonStyle"
            />

        <Button
            android:id="@+id/s3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/colorBackground"
            android:layout_below="@id/sizeFilter"
            android:layout_toRightOf="@id/s2"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:text="0.5"
            tools:ignore="ButtonStyle"
            />

        <Button
            android:id="@+id/buttonAccept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/colorBackground"
            android:layout_alignParentBottom="true"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:text="Accept"
            tools:ignore="ButtonStyle"
            />




    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>